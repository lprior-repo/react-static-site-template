# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your deployment

# Required variables
project_name = "my-react-app"
environment  = "prod"
aws_region   = "us-east-1"

# Optional: Custom domain configuration
# domain_name = "example.com"

# Optional: Logging configuration
enable_logging = true

# Optional: CloudFront price class
# price_class = "PriceClass_100"  # Use only US, Canada and Europe
# price_class = "PriceClass_200"  # Use all edge locations except those in Australia, Japan, India, South Korea, Singapore, Taiwan, Hong Kong, and Philippines
# price_class = "PriceClass_All"  # Use all edge locations

# Optional: S3 versioning
enable_versioning = true
enable_mfa_delete = false

# Optional: Custom documents
index_document = "index.html"
error_document = "index.html"

# Optional: CORS configuration
cors_allowed_origins = ["*"]

# Optional: Health check
enable_health_check = false